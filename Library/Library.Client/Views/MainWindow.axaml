<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Library.Client.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Library.Client.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Library.Client">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/LibraryStyles.axaml"/>
	</Window.Styles>
	
    <Grid Classes="MainGrid" RowDefinitions="Auto,*">
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Button Classes="ToolButton">
				<Image Source="/Assets/task-add.png"/>
			</Button>
			<Button Classes="ToolButton">
				<Image Source="/Assets/task-edit.png"/>
			</Button>
			<Button Classes="ToolButton">
				<Image Source="/Assets/task-delete.png"/>
			</Button>
		</StackPanel>
		<DataGrid Grid.Row="1" AutoGenerateColumns="True"
				  Items="{Binding Books}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Name"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>
